<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/enterNameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Name"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter"
            android:text="Tell us your name, so that nearby devices could discover you." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Name is solely for device discovery and is not shared." />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            app:contentPaddingLeft="10dp"
            app:strokeWidth="0dp">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="@font/inter"
                android:hint="Name"
                android:inputType="text" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:strokeWidth="0dp"
            android:id="@+id/check"
            app:cardBackgroundColor="@color/alt_variant_60"
            android:layout_marginTop="25dp"
            app:contentPadding="20dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="bottom|end"
            app:cardElevation="1dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tickIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_check"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>